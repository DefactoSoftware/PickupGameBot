<h1>Games</h1>
<h2>Upcoming</h2>

<% @games.each do |game| %>
  <div class="upcoming">
    <%= link_to game, class: "game cloud" do %>
      <h2>
        <%= game.name %>
      </h2>
      <ul>
        <% if game.start_time && game.start_time.to_date == Date.today %>
          <li>
            <span class="icon-watch"></span>
            <%= l game.start_time, format: :short_time %>
          </li>
        <% elsif game.start_time %>
          <li>
            <span class="icon-watch"></span>
            <%= l game.start_time, format: :short %>, <%= l game.start_time, format: :short_time %>
          </li>
        <% end %>

        <li>
          <span class="icon-head"></span>
          <%= game.attendances.count || 0 %>
          <%= "/ #{game.required_players}" if game.required_players %>
        </li>

        <% if game.game %>
          <li>
            <span class="icon-trophy"></span>
            <%= game.game %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>

